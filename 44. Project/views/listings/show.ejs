<% layout("/layouts/boilerplate")%>

  <div class="row mt-3">
    <div class="col-6 offset-3 show-card">
      <div class="card">
        <h2>Listing Details</h2>
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image" />
        <div class="card-body">
          <p class="card-text">
            <b>
              <%=listing.title%>
            </b><br />
            <%=listing.description%><br />
              &#x20B9;<%=listing.price.toLocaleString("en-IN")%> <br />
                <%=listing.location%> <br />
                  <%=listing.country%>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="btns"><a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark  offset-3 delete-btn">Delete</button>
    </form>
  </div>