<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <div class="col-6 offset-3 show-card">
    <div class="card listing-card">
      <h2><%=listing.title%></h2>
      <img
        src="<%=listing.image%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <%=listing.description%><br />
          &#x20B9;<%=listing.price.toLocaleString("en-IN")%> <br />
          <%=listing.location%> <br />
          <%=listing.country%>
        </p>
      </div>
    </div>
  </div>
  <div class="btns">
    <a
      href="/listings/<%=listing._id%>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn"
      >Edit</a
    >
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-3 delete-btn">Delete</button>
    </form>
  </div>
  <div class="col-8 offset-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%=listing._id%>/review"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="10"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Comment should be valid!</div>
      </div>
      <div class="mb-3 mt-3">
        <button class="btn btn-outline-dark">Submit</button>
      </div>
    </form>
    <hr />
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.review){%>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Jane Doe</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%>Star</p>
        </div>
        <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
          <button class="btn btn-sm btn-outline-dark">Delete</button>
        </form>
      </div>
      <%}%>
    </div>
  </div>
</div>
